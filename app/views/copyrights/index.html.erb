<p id="notice"><%= notice %></p>

<h1>Copyrights</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Ref number</th>
      <th>Applicant name</th>
      <th>Work</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @copyrights.each do |copyright| %>
      <tr>
        <td><%= copyright.date %></td>
        <td><%= copyright.ref_number %></td>
        <td><%= copyright.applicant_name %></td>
        <td><%= copyright.work %></td>
        <td><%= link_to 'Show', copyright %></td>
        <td><%= link_to 'Edit', edit_copyright_path(copyright) %></td>
        <td><%= link_to 'Destroy', copyright, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Copyright', new_copyright_path %>
